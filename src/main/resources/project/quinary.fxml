<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="480.0" prefWidth="640.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.QuinaryController">
   <children>
      <Label fx:id="firstText" text="Your pet ages faster than you, as their life is shorter.">
         <font>
            <Font name="Comic Sans MS" size="14.0" />
         </font>
      </Label>
      <Label fx:id="secondText" text="Enter your  age, to see how old you would be in pet years!">
         <font>
            <Font name="Comic Sans MS" size="14.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="inputField" promptText="Enter years here" />
            <Button fx:id="enterButton" mnemonicParsing="false" onAction="#calculateAge" text="Enter" />
         </children>
      </HBox>
      <Label fx:id="yearsField" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="newAdoptionButton" mnemonicParsing="false" onAction="#switchToPrimary" text="Adopt a new animal" />
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#closeApplication" text="Close application" />
         </children>
      </HBox>
   </children>
</VBox>
